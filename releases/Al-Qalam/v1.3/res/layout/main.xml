<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mainview"
    android:gravity="center_vertical|center_horizontal" >
      
	<ImageView android:id="@+id/splashimage"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
    	android:src="@drawable/frontpage"  />
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/buttons"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
	    android:paddingLeft="15dip"
	    android:paddingTop="90dip" 
	    android:gravity="center_horizontal" >
    
	    <ImageButton android:id="@+id/imgBtnQuran" 
	     	android:src="@drawable/btn_quran"
	     	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:layout_margin="1pt"
	    	android:background="@null"  />
	    	
	    <!-- ImageView android:id="@+id/imgQuran"
	    	android:layout_width="200px" 
	    	android:layout_height="50px" 
	    	android:src="@drawable/btn_quran_normal"
	    	android:layout_margin="2px"     /-->
	    
	    <ImageButton android:id="@+id/imgBtnBukhari"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:src="@drawable/btn_bukhari"
	    	android:layout_margin="1pt"
	    	android:background="@null"      />
	    	
	    <ImageButton android:id="@+id/imgBtnMuslim"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:src="@drawable/btn_muslim" 
	    	android:layout_margin="1pt"
	    	android:background="@null"   />	   
	
		<ImageButton android:id="@+id/imgBtnAbudovud"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:src="@drawable/btn_abudovud"
	    	android:layout_margin="1pt"
	    	android:background="@null"  />
	    	
	    <ImageButton android:id="@+id/imgBtnTirmidi"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:src="@drawable/btn_tirmidi"
	    	android:layout_margin="1pt"
	    	android:background="@null"     />
	    	
    	
    </LinearLayout>
			     
</LinearLayout>
