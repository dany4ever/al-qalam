<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/surabg">

    <RelativeLayout
    		android:layout_width="fill_parent"
    		android:layout_height="38dip"
    		android:orientation="horizontal">

    <ImageView android:id="@+id/headerImg" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:layout_centerInParent="true"
    		android:src="@drawable/headerabove" />

    <!--  ImageView android:id="@+id/headerImgLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_leftup"
        android:layout_alignLeft="@id/headerImg" /-->

    <ImageButton android:id="@+id/headerPrev"
        android:src="@drawable/btn_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_alignLeft="@id/headerImg" />

    <ImageView android:id="@+id/suraName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sname_1"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />

    <!--  ImageView android:id="@+id/headerImgRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_rightup"
        android:layout_alignRight="@id/headerImg" /-->

    <ImageButton android:id="@+id/headerNext"
        android:src="@drawable/btn_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_alignRight="@id/headerImg" />

    </RelativeLayout>

    <ListView
        android:id="@+id/AyaList"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollingCache="true">
    </ListView>
</LinearLayout>