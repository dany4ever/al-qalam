<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal|center_vertical"
    android:paddingTop="10px"  >
    
    <LinearLayout android:orientation="vertical"
    	android:layout_width="57px"
    	android:layout_height="fill_parent"
   		android:gravity="center_horizontal"  >

    	<TextView android:id="@+id/ayaNumber" 
    		android:layout_width="57px" 
    		android:layout_height="45px"
    		android:background="@drawable/ayah"
    		android:text="1"
    		android:color="@color/darkblack"
    		android:gravity="center_horizontal|center_vertical" />
    		
    	<ImageView android:id="@+id/spcImg" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" />
    	
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
   		android:gravity="left|center_vertical" 
   		android:id="@+id/ayatGroup">
   		
   		<ImageView android:id="@+id/Bismillah" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" />
    		
		<ImageView android:id="@+id/arabicText" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"  />
    		
    	<TextView android:id="@+id/uzbekText" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:gravity="left"
    		android:padding="10px"  />
    	
    	<TextView android:id="@+id/extraText" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:gravity="left"
    		android:padding="10px"  />
    		
    	<View android:layout_width="fill_parent"
			  android:layout_height="1dip"
			 android:background="#FF9966" />
    </LinearLayout>
</LinearLayout>