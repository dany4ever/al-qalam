<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left"
    android:id="@+id/QuranRow_Group"
    android:background="#DBEDFB"
    android:padding="5dip">

	<TextView android:id="@+id/QuranRow_Order"
		android:layout_width="48dip"
		android:layout_height="48dip"
		android:text = "114"
		android:textStyle="normal"
		android:gravity="center"
		android:textColor="#217dc2"
		android:textSize="13dip"
		android:background="@drawable/surah_number_bg" />

	<LinearLayout
 		android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="left">

		<TextView android:id="@+id/QuranRow_Title"
			android:text="Фотиха"
	    	android:textStyle="bold"
			android:layout_width="200dip"
			android:layout_height="28dip"
			android:textSize="16dip"
			android:gravity="left|center_vertical"
			android:paddingLeft="5dip"
			android:textColor="#217dc2" />

		 <TextView android:id="@+id/QuranRow_Info"
			android:layout_width="200dip"
			android:layout_height="wrap_content"
			android:text = ""
			android:textSize="12dip"
			android:gravity="left|center_vertical"
			android:paddingLeft="5dip"
			android:textColor="#217dc2" />

	</LinearLayout>
</LinearLayout>
