<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:id="@+id/suraIndexRoot"  >
    
	<ImageView
		android:layout_width="35dip"
		android:layout_height="35dip"
		android:id="@+id/srDown"
		android:src="@drawable/index_sound_get" />
		
	<TextView android:id="@+id/srOrder"
		android:layout_width="50dip"
		android:layout_height="35dip"
		android:text = "1"
		android:textStyle="normal"
		android:gravity="center"
		android:textColor="@color/darkred" />
		
	<TextView android:id="@+id/srTitle"
		android:text="Фотиха" 
    	android:textStyle="bold"
		android:layout_height="35dip"
		android:layout_width="132dip" 
		android:gravity="center"
		android:textColor="@color/darkred"  />

	 <TextView android:id="@+id/srAyats"
		android:layout_width="58dip"
		android:layout_height="35dip"
		android:text = "7"
		android:textStyle="normal"
		android:gravity="center"
		android:textColor="@color/darkred" />
    	
     <ImageView android:id="@+id/srPlace"
		android:layout_width="45dip"
		android:layout_height="35dip"  />

</LinearLayout>

		